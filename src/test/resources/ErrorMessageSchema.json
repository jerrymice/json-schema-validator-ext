{
  "$id": "https://www.example.com/json/schema/customer",
  "$schema": "https://json-schema.org/draft/2020-12-ext-v1/schema#",
  "title": "客户信息",
  "description": "这是一个客户信息的JSON Schema描述文件",
  "type": "object",
  "error": {
    "required": {
      "name": {
        "code": "10001",
        "message": "姓名不能为空"
      }
    }
  },
  "required": [
    "name",
    "sex"
  ],
  "properties": {
    "name": {
      "type": ["string","null"],
      "minLength": 2,
      "maxLength": 8
    },
    "age": {
      "type": "integer",
      "minimum": 1,
      "maximum": 110,
      "error": {
        "type": {
          "message": "年龄不能为空",
          "code": "1001"
        }
      }
    },
    "sex": {
      "type": "boolean"
    },
    "marriage": {
      "type": [
        "integer",
        "null"
      ],
      "enum": [
        null,
        0,
        1
      ]
    }
  }
}